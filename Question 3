function toTitleCase(str){

    str = str.toLowerCase();
    str = str.split(' ');
    for (var i = 0; i < str.length; i++) {
    str[i] = str[i].charAt(0).toUpperCase() + str[i].slice(1);
    return str.join(' ');
}}

let name = "Huzaifa";

console.log(name.toUpperCase());
console.log(name.toLowerCase());
console.log(toTitleCase(name));
